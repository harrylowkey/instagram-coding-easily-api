{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2021",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"lib": [
			"ES2020",
			"ESNext",
			"dom"
		],
		"resolveJsonModule": true,
		"paths": {
			"~*": [
				"src/*"
			]
		}
	}
}
