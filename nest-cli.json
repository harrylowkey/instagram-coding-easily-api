{
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"assets": [
			{
				"include": "public/**/*",
				"watchAssets": true
			},
			{
				"include": "**/*.hbs",
				"watchAssets": true
			},
			{
				"include": "i18n/**/*",
				"watchAssets": true
			},
			{
				"include": "static/**/*",
				"watchAssets": true
			},
			{
				"include": "**/*.json",
				"watchAssets": false
			},
			{
				"include": "**/*.js",
				"watchAssets": true
			}
		]
	}
}
